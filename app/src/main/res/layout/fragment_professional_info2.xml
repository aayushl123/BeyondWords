<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.GenderFragment"
    app:cardCornerRadius="10dp"
    app:cardElevation="6dp">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:paddingTop="30dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_below="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/heading_size"
            android:background="@drawable/bg_color">


            <TextView
                android:id="@+id/territory_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/heading_size"
                android:text="Territory of organization"
                android:textStyle="bold"
                android:textColor="@color/white"/>



            <EditText
                android:id="@+id/org_territory"
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:layout_height="40dp"
                android:inputType="text"
                android:textColor="@color/white"

                android:layout_marginTop="20dp"
                android:backgroundTint="@color/white"
                android:layout_below="@+id/territory_text"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="@dimen/heading_size"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_below="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@drawable/bg_color">



            <TextView
                android:id="@+id/profession_status_ic_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/heading_size"
                android:layout_marginLeft="10dp"
                android:text="Function in the organization"
                android:textStyle="bold"
                android:textColor="@color/white"/>


            <EditText
                android:id="@+id/func_org"
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:inputType="text"
                android:backgroundTint="@color/white"
                android:textColor="@color/white"

                android:layout_below="@+id/profession_status_ic_text"/>



        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>

