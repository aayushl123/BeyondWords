<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SurveyFragment1"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="20dp">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/gender_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:tint="@color/colorPrimary"
                android:src="@drawable/ic_gender"/>

            <TextView
                android:id="@+id/gender_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/gender_icon"
                android:layout_marginLeft="10dp"
                android:text="Gender"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>

            <Spinner
                android:id="@+id/gender_spinner"
                android:layout_width="149dp"
                android:layout_centerVertical="true"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/age_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"

                android:tint="@color/colorPrimary"
                android:src="@drawable/ic_age"/>

            <TextView
                android:id="@+id/age_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/age_icon"
                android:layout_marginLeft="10dp"
                android:text="Age"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>

            <EditText
                android:id="@+id/age_spinner"
                android:layout_width="149dp"
                android:layout_centerVertical="true"
                android:layout_height="40dp"
                android:inputType="number"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/citizen_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:tint="@color/colorPrimary"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_country"/>

            <TextView
                android:id="@+id/citizen_text"

                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/citizen_icon"
                android:text="Citizenship"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>

            <Spinner
                android:id="@+id/citinzen_spinner"
                android:layout_width="149dp"
                android:layout_centerVertical="true"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/home_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home_icon"
                android:layout_width="30dp"

                android:tint="@color/colorPrimary"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/home"/>

            <TextView
                android:id="@+id/Home_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/home_icon"
                android:text="Home Country"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>

            <Spinner
                android:id="@+id/home_spinner"
                android:layout_width="149dp"
                android:layout_centerVertical="true"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"

            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/language_icon"
                android:layout_width="30dp"

                android:tint="@color/colorPrimary"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_language"/>

            <TextView
                android:id="@+id/language_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"

                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/language_icon"
                android:text="Language"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>

            <Spinner
                android:id="@+id/language_spinner"
                android:layout_width="149dp"
                android:layout_centerVertical="true"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ethic_icon"
                android:layout_width="30dp"

                android:tint="@color/colorPrimary"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_religion"/>

            <TextView
                android:id="@+id/ethic_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_centerVertical="true"

                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/ethic_icon"
                android:text="Ethicity"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>

            <Spinner
                android:id="@+id/ethnic_spinner"
                android:layout_width="149dp"
                android:layout_centerVertical="true"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/religion_icon"
                android:layout_width="30dp"

                android:tint="@color/colorPrimary"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_ethnic"/>

            <TextView
                android:id="@+id/religion_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_centerVertical="true"

                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/religion_icon"
                android:text="Religion"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>

            <Spinner
                android:id="@+id/religion_spinner"
                android:layout_width="149dp"
                android:layout_centerVertical="true"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/socio_economic_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:tint="@color/colorPrimary"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_economic"/>

            <TextView
                android:id="@+id/socio_economic_text"

                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/socio_economic_icon"
                android:text="Socio Economic Situation"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>

            <Spinner
                android:id="@+id/socio_economic_spinner"
                android:layout_width="149dp"
                android:layout_centerVertical="true"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"/>

        </RelativeLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>