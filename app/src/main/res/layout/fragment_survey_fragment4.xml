<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.GenderFragment"
    app:cardCornerRadius="10dp"
    app:cardElevation="6dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color"
    android:padding="20dp"

    tools:context=".activity.AgreementActivity">

    <LinearLayout
        android:id="@+id/phase2_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/phase2_icon"
            android:layout_width="43dp"
            android:layout_height="60dp"
            android:tint="@color/white"
            android:src="@drawable/ic_question"
            android:text="@string/describe_sit"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/text_view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/describe_sit"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/phase2_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_below="@+id/phase2_heading"
        android:padding="20dp"
        android:background="@drawable/text_bg"
        android:text="@string/phase2_ques"
        />

    <EditText
        android:id="@+id/phase2_user_response"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/phase2_question"
        android:layout_above="@+id/phase2_next"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_bg"
        android:textColor="@color/black"
        android:gravity="start"
        android:hint="   Your desciption goes here..."
        android:padding="10dp" />

   <!-- <Button
        android:id="@+id/phase2_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/bt_blue_bg"
        android:text="@string/phase2_Next"
        android:textAllCaps="false"
        android:textColor="@color/white"
         />-->

</RelativeLayout>

</androidx.cardview.widget.CardView>