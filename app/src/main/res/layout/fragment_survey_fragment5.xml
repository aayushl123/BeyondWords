<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.GenderFragment"
    app:cardCornerRadius="10dp"
    app:cardElevation="6dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color"
    android:padding="10dp"

    tools:context=".fragment.ConcernFragment2">

    <LinearLayout
        android:id="@+id/phase3_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/question_icon"
            android:src="@drawable/ic_question"

            android:layout_marginTop="20dp"
            android:tint="@color/white"
            android:layout_width="43dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/text_view1"

            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:text="Identify a concern"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:id="@+id/phase3_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phase3_heading"
        android:background="@drawable/text_bg"
        android:padding="20dp"
        android:text="@string/phase3_statement"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/phase3_response"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/phase3_question"
        android:layout_centerInParent="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_bg"
        android:textColor="@color/black"

        android:gravity="start"
        android:hint="   Your Concern goes here..."
        android:padding="10dp" />





</RelativeLayout>


</androidx.cardview.widget.CardView>



